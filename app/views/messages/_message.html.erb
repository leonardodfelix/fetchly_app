<%= turbo_frame_tag dom_id(message) do %>
  <div class="message p-2 my-2 rounded-lg" data-user-id="<%= message.user.id %>">
    <div class="text-sm text-gray-600">
      <%= "#{message.user.username} | #{message.created_at.strftime("%H:%M:%S")}" %>
    </div>   
    <%= turbo_frame_tag [dom_id(message), 'controls'] do %>
      <% if display_controls %>
        <%= render partial: 'messages/controls', locals: { message: message } %>
      <% end %>
    <% end %>
    <div class="message-body">
      <%= message.body %>
    </div>
  </div>
<% end %>

