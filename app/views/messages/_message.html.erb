<%= turbo_frame_tag dom_id(message) do %>
  <div class="message" data-user-id="<%= message.user.id %>">
    <div>
      <%= "#{<%= message.user.username %>} | #{<%= message.created_at.strftime("%H:%M:%S") %>}" %>
    </div>
    <%= turbo_stream_tag [dom_id(message), 'controls'] do %>
      <% if display_controls %>
        <%= render partial: 'messages/controls', locals: { message: message } %>
      <% end %>
    <% end %>
    <div>
      <%= message.body %>
    </div>
  </div>
