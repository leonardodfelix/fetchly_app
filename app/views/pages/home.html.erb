<%= turbo_stream_from dom_id(current_user) %>

<div class="mx-auto max-w-2xl">
  <div>
    <h1 class="text-3xl font-bold text-center my-4">Fetchly Chatroom</h1>
    <p class="text-xl text-center mb-6">Hi, <%= current_user.username %></p>
  </div>
  <div class="border border-gray-300 rounded-lg p-4 max-h-96 overflow-y-auto">
    <%= render partial: 'messages/chatbox', locals: { messages: @messages } %>
  </div>
  <div class="mt-4">
    <%= render partial: 'messages/form', locals: { message: @message } %>
  </div>
</div>
